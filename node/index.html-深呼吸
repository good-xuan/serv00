    <script>
        // 简单的交互脚本
        function saveNote() {
            const input = document.querySelector('.note-input');
            if(input.value.trim() === "") {
                alert("试着写下几个字，哪怕只是一个“嗨”。");
            } else {
                alert("你的心声已被倾听。愿你今晚好梦。");
                input.value = "（已封存）";
                input.disabled = true;
            }
        }

        // 图片错误处理
        document.querySelectorAll('img').forEach(img => {
            img.onerror = function() {
                this.src = 'https://placehold.co/600x400/e0bbe4/ffffff?text=Peace';
            };
        });
    </script>
